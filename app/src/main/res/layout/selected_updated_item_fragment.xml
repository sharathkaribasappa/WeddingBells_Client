<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100" >

    <ImageView
        android:id="@+id/selected_Update_Item_Imageview"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="40"
        android:scaleType="fitXY"
        android:contentDescription="selected_Update_Item_image" />

    <TextView
        android:id="@+id/selected_Update_Item_description"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:text="Title/Description"
        android:textSize="18sp"
        android:textStyle="italic" />

    <ListView
        android:id="@+id/selected_Update_Item_Comments_List"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="50" />

</LinearLayout>